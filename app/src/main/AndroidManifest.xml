<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nramos.mimoflix">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MimoflixApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Mimoflix.Light"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.mainactivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.moviedetail.MovieDetailActivity"
            android:theme="@style/DetailActivity" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:theme="@style/SearchActivity" />
        <activity
            android:name=".ui.actordetail.ActorDetailActivity"
            android:theme="@style/ActorDetailActivity" />
        <activity
            android:name=".ui.genrelist.MoviesGenreActivity"
            android:theme="@style/Mimoflix.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nramos.mimoflix.ui.mainactivity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.companylist.MoviesCompanyActivity"
            android:theme="@style/Mimoflix.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nramos.mimoflix.ui.mainactivity.MainActivity" />
        </activity>

        <activity
            android:name=".ui.favoriteactivity.FavoriteActivity"
            android:theme="@style/Mimoflix.Light"/>

        <activity
            android:name=".ui.trailer.TrailerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/TrailerActivity" />
    </application>

</manifest>