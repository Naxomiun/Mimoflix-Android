<?xml version="1.0" encoding="utf-8"?>
    <layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GenericTitleStyle"
        android:paddingStart="@dimen/default_left_margin"
        android:paddingEnd="@dimen/default_right_margin"
        tools:text="Movies" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.nramos.mimoflix.customviews.EmptyRecyclerView
            android:id="@+id/rv_main"
            tools:listitem="@layout/item_genre_recommended"
            tools:itemCount="5"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:paddingStart="@dimen/default_left_margin"
            android:paddingEnd="@dimen/default_right_margin"
            android:paddingTop="12dp"
            android:layoutAnimation="@anim/list_animation"
            android:paddingBottom="40dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />

        <ProgressBar
            android:id="@+id/pb_content_loading"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorAccent"
            android:indeterminateTintMode="src_in"
            android:indeterminate="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </FrameLayout>

</LinearLayout>
</layout>