<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.nramos.mimoflix.ui.companylist.MoviesCompanyActivityViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="?attr/colorBackgroundThemed"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            app:liftOnScroll="true"
            android:backgroundTint="?attr/colorBackgroundThemed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fitsSystemWindows="true"
                app:title="@{viewModel.company.name}"
                app:expandedTitleMarginStart="16dp"
                app:expandedTitleMarginBottom="6dp"
                app:collapsedTitleTextAppearance="@style/TitleCollapsedStyle"
                app:expandedTitleTextAppearance="@style/TitleExpandedStyle"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <androidx.appcompat.widget.Toolbar
                    app:navigationIcon="@drawable/ic_back"
                    android:id="@+id/company_list_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/transparent"
                    app:layout_collapseMode="pin"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/ptr_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:background="?attr/colorBackgroundThemed"
                style="@style/CustomRecyclerStyle"
                app:spanCount="2"
                app:items="@{viewModel.movies}"
                android:paddingTop="@dimen/detail_margin_between_same_section"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:paddingStart="@dimen/default_half_left_margin"
                android:paddingEnd="@dimen/default_half_right_margin"
                android:layoutAnimation="@anim/list_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:visibility="@{viewModel.movies.size() == 0 ? View.VISIBLE : View.GONE}"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_rawRes="@raw/loading"
            android:layout_width="@dimen/loading_size"
            android:layout_height="@dimen/loading_size"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>