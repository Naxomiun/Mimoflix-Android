<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.nramos.mimoflix.ui.genrelist.MoviesGenreActivityViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:background="?attr/colorBackgroundThemed"
            style="@style/CustomRecyclerStyle"
            app:spanCount="2"
            app:items="@{viewModel.movies}"
            android:paddingTop="@dimen/detail_margin_between_same_section"
            android:layoutAnimation="@anim/list_animation"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:paddingStart="@dimen/default_half_left_margin"
            android:paddingEnd="@dimen/default_half_right_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/genre_list_toolbar"
                android:background="?attr/colorBackgroundThemed"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"/>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>