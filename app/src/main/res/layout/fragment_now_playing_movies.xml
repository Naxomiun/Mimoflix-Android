<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.nramos.mimoflix.ui.tabmovies.MoviesFragmentViewModel" />
    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popular_movies"
        style="@style/CustomRecyclerStyle"
        app:items="@{viewModel.nowplayingMovies}"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layoutAnimation="@anim/list_animation"
        android:paddingTop="@dimen/default_half_left_margin"
        android:paddingEnd="@dimen/default_half_left_margin"
        android:paddingStart="@dimen/default_half_right_margin"
        android:paddingBottom="@dimen/bottom_nav_height_plus_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</layout>