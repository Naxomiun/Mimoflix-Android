<?xml version="1.0" encoding="utf-8"?>
<layout>
<com.nramos.mimoflix.customviews.MaskedCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_poster_movie"
    style="@style/ClickableCardView"
    android:transitionName="dotsindicator"
    app:cardElevation="20dp"
    android:layout_marginEnd="25dp"
    android:layout_width="315dp"
    android:layout_height="410dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MovieCardViewStyle"
    app:cardPreventCornerOverlap="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:contentDescription="@string/poster_content_description"
            tools:src="@drawable/recommended_drive"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/iv_poster_movie"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dansdev.library_autofittextview.AutofitTextView
                android:singleLine="true"
                android:gravity="bottom"
                android:maxLines="2"
                app:minTextSize="20sp"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="45sp"
                android:textAllCaps="true"
                tools:text="DRIVE"
                android:id="@+id/tv_title"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:id="@+id/rb_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:progressTint="@color/white"
                android:numStars="5"
                android:layout_gravity="start"
                android:stepSize="0.1"
                android:clickable="false"
                android:theme="@style/RecommendedGenreRatingBar"
                style="@style/RecommendedGenreRatingBar"
                tools:rating="4.5" />

        </LinearLayout>

    </FrameLayout>

</com.nramos.mimoflix.customviews.MaskedCardView>
</layout>

