<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.nramos.mimoflix.ui.tabmovies.MoviesFragmentViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            app:liftOnScroll="true"
            android:backgroundTint="?attr/colorBackgroundThemed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:fitsSystemWindows="true"
                app:title="Movies"
                app:expandedTitleMarginStart="16dp"
                app:expandedTitleMarginBottom="6dp"
                app:collapsedTitleTextAppearance="@style/TitleCollapsedStyle"
                app:expandedTitleTextAppearance="@style/TitleExpandedStyle"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_fragment_movies"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/transparent"
                    app:layout_collapseMode="pin"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorBackgroundThemed"
                app:tabContentStart="16dp"
                android:gravity="bottom"
                app:tabMode="auto"
                app:tabIndicator="@drawable/rounded_tab_indicator"
                app:tabIndicatorHeight="5dp"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabTextColor="@color/black"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/CustomTabsTextAppereance"
                app:tabIndicatorFullWidth="false"
                android:minHeight="?attr/actionBarSize"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:animateLayoutChanges="true"
            android:id="@+id/viewpager_movies"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>