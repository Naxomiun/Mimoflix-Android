<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.nramos.mimoflix.model.localgenre.LocalGenreViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/default_half_left_margin"
        android:layout_marginEnd="@dimen/default_half_right_margin"
        android:layout_marginBottom="@dimen/default_half_right_margin"
        app:customCardBackgroundColor="@{viewModel.localGenre.color}"
        app:cardCornerRadius="@dimen/movie_item_corner_radius"
        app:cardElevation="@dimen/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="125dp">

            <ImageView
                android:alpha="0.2"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:drawableSrc="@{viewModel.localGenre.image}"
                app:cornerRadius="@{@dimen/movie_item_corner_radius}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:ignore="ContentDescription" />

            <com.dansdev.library_autofittextview.AutofitTextView
                android:singleLine="true"
                app:minTextSize="25sp"
                android:textSize="32sp"
                android:text="@{viewModel.localGenre.name}"
                android:fontFamily="@font/gotham_bold"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/default_right_margin"
                android:layout_marginEnd="@dimen/default_left_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>

