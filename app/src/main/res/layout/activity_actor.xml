<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.nramos.mimoflix.ui.actordetail.ActorDetailActivityViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="@dimen/detail_margin_between_sections"
            android:visibility="gone"
            android:background="?attr/colorBackgroundThemed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"
            android:id="@+id/fl_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fake_toolbar">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_top_back_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/default_right_margin"
                style="@style/ClickableImageView"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.dansdev.library_autofittextview.AutofitTextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:singleLine="true"
                android:ellipsize="end"
                app:minTextSize="@dimen/actor_title_min_size"
                app:layout_constraintStart_toEndOf="@id/iv_top_back_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/detail_margin_between_sections"
                android:layout_marginEnd="@dimen/detail_margin_between_sections"
                android:fontFamily="@font/gotham_bold"
                android:textSize="@dimen/actor_title_max_size"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            style="@style/CustomRecyclerStyle"
            android:fitsSystemWindows="true"
            android:id="@+id/cast_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:animateLayoutChanges="true"
                android:background="?attr/colorBackgroundThemed"
                android:paddingBottom="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:transitionName="prueba2"
                    android:id="@+id/iv_cast_profile"
                    style="@style/ActorImage"
                    binding:cornerRadius="@{@dimen/zero}"
                    binding:urlSrc="@{viewModel.actor.profilePic}"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="H,1:1.3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/tv_cast_name"
                    android:fontFamily="@font/gotham_black"
                    android:textColor="?attr/textColorThemed"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:text="@{viewModel.actor.name}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/iv_cast_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/TitleStyle"
                    android:id="@+id/tv_known_for_title"
                    android:layout_marginStart="@dimen/default_right_margin"
                    android:layout_marginEnd="@dimen/default_left_margin"
                    android:layout_marginTop="@dimen/detail_margin_between_same_section"
                    android:text="@string/conocido_por"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_cast_place_of_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/default_half_left_margin"
                    android:paddingEnd="@dimen/default_half_right_margin"
                    app:items="@{viewModel.actorMovies}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginTop="@dimen/detail_margin_between_same_section"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_known_for_title"
                    android:id="@+id/rv_known_for"
                    style="@style/CustomRecyclerStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:drawableStart="@drawable/ic_star"
                    android:layout_marginTop="@dimen/default_half_left_margin"
                    android:id="@+id/tv_cast_place_of_birth"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="@{viewModel.actor.popularity.toString()}"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/tv_cast_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/TitleStyle"
                    android:id="@+id/tv_biography_title"
                    android:layout_marginStart="@dimen/default_right_margin"
                    android:layout_marginEnd="@dimen/default_left_margin"
                    android:layout_marginTop="@dimen/detail_margin_between_sections"
                    android:text="@string/biography_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_known_for"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/SubtitleStyle"
                    android:id="@+id/tv_biography"
                    android:layout_marginStart="@dimen/default_right_margin"
                    android:layout_marginEnd="@dimen/default_left_margin"
                    android:layout_marginTop="@dimen/detail_margin_between_same_section"
                    android:lineSpacingExtra="7dp"
                    android:text="@{viewModel.actor.biography}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_biography_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</layout>
