<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Mimoflix.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorBackgroundThemed">@color/lightBackgroundColor</item>
        <item name="android:statusBarColor">?attr/colorBackgroundThemed</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ButtonGenreSelectorStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:outlineAmbientShadowColor">@color/colorAccent</item>
        <item name="android:outlineSpotShadowColor">@color/colorAccent</item>
    </style>

</resources>