<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Mimoflix.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorBackgroundThemed">@color/lightBackgroundColor</item>
        <item name="textColorThemed">@color/lightTextColor</item>
        <item name="colorCardThemed">@color/light_gray</item>
        <item name="android:statusBarColor">?attr/colorBackgroundThemed</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/arc_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/arc_transition</item>
    </style>

    <style name="Mimoflix.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorThemed">@color/darkTextColor</item>
        <item name="colorBackgroundThemed">@color/darkBackgroundColor</item>
        <item name="colorCardThemed">@color/darkest_gray</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:statusBarColor">?attr/colorBackgroundThemed</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">?attr/colorBackgroundThemed</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/arc_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/arc_transition</item>
    </style>


</resources>