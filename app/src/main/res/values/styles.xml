<resources>

    <style name="Mimoflix.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorBackgroundThemed">@color/lightBackgroundColor</item>
        <item name="android:statusBarColor">?attr/colorBackgroundThemed</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/arc_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/arc_transition</item>
    </style>

    <style name="Mimoflix.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TrailerActivity" parent="Mimoflix.Light">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TitleCollapsedStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/gotham_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleExpandedStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/gotham_black</item>
    </style>

    <style name="ShapeAppearanceOverlay.MovieCardViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/recommended_genre_corner_size_top_left</item>
        <item name="cornerSizeTopRight">@dimen/recommended_genre_corner_size_top_right</item>
        <item name="cornerSizeBottomLeft">@dimen/recommended_genre_corner_size_bottom_left</item>
        <item name="cornerSizeBottomRight">@dimen/recommended_genre_corner_size_bottom_right</item>
    </style>

    <style name="ShapeAppearanceOverlay.DetailCardViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RecommendedGenreRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="GenreRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:colorControlHighlight">@color/black</item>
    </style>

    <style name="CustomRecyclerStyle">
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="GenericTitleStyle" parent="Mimoflix.Light">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ClickableCardView" parent="Mimoflix.Light">
        <item name="rippleColor">@color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ClickableView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>


    <!-- Detail Activity -->

    <style name="DetailActivity" parent="Mimoflix.Light">
        <item name="android:windowSharedElementEnterTransition">@transition/arc_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/arc_transition</item>
    </style>

    <style name="DetailActivity.Specs" parent="DetailActivity">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailActivity.Section.Title" parent="DetailActivity">
        <item name="android:textSize">21sp</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailActivity.Section.Subtitle" parent="DetailActivity">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">7dp</item>
        <item name="fontFamily">@font/gotham_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="DetailActivity.TrailerButton" parent="Widget.MaterialComponents.Button">
        <item name="iconSize">@dimen/trailer_button_icon_size</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="cornerRadius">@dimen/trailer_button_radius</item>
    </style>

    <style name="CustomTabsTextAppereance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

    <!-- Search Activity -->

    <style name="SearchActivity" parent="Mimoflix.Light">
        <item name="android:windowSharedElementEnterTransition">@transition/arc_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/arc_transition</item>
    </style>

    <style name="SearchActivity.ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/SearchActivity.ChipTextAppearance</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipBackgroundColor">@color/light_gray</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchActivity.ChipTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchActivity.Input" parent="SearchActivity">
        <item name="android:imeOptions">actionDone|actionSend|actionGo</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_find_movies</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SearchActivity.Title" parent="SearchActivity">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="SearchActivity.SubTitle" parent="SearchActivity">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="fontFamily">@font/gotham_bold</item>
    </style>

    <!-- Actor Detail Activity -->

    <style name="ActorDetailActivity" parent="Mimoflix.Light">
        <item name="android:windowSharedElementEnterTransition">@transition/arc_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/arc_transition</item>
    </style>

    <style name="ActorDetailActivity.ActorImage" parent="ActorDetailActivity">
        <item name="android:foreground">@drawable/cast_image_foreground</item>
    </style>


    <!-- Dialog favorite -->

    <style name="DialogFavoriteTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>


</resources>
